-- Day 11: GROUP BY practice
-- Table used: employees(emp_id, name, age, department, designation, salary, city)

-- 1. Count the number of employees in each department
SELECT department, COUNT(*) AS total_employees
FROM employees
GROUP BY department;

-- 2. Find the total salary for each department
SELECT department, SUM(salary) AS total_salary
FROM employees
GROUP BY department;

-- 3. Calculate the average salary for each department
SELECT department, AVG(salary) AS avg_salary
FROM employees
GROUP BY department;

-- 4. Count the number of employees in each city
SELECT city, COUNT(*) AS total_employees
FROM employees
GROUP BY city;

-- 5. Find the total salary paid in each city
SELECT city, SUM(salary) AS total_salary
FROM employees
GROUP BY city;

-- 6. Calculate the average age of employees in each department
SELECT department, AVG(age) AS avg_age
FROM employees
GROUP BY department;

-- 7. Count the number of employees for each designation
SELECT designation, COUNT(*) AS total_employees
FROM employees
GROUP BY designation;

-- 8. Find the minimum salary in each department
SELECT department, MIN(salary) AS min_salary
FROM employees
GROUP BY department;

-- 9. Find the maximum salary in each department
SELECT department, MAX(salary) AS max_salary
FROM employees
GROUP BY department;

-- 10. Calculate the average salary for each city
SELECT city, AVG(salary) AS avg_salary
FROM employees
GROUP BY city;
