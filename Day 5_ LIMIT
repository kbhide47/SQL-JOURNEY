-- Day 05: LIMIT practice
-- Table used: employees(emp_id, name, age, department, designation, salary, city)

-- 1. Display only first 3 employees
SELECT * FROM employees
LIMIT 3;

-- 2. Show first 5 records
SELECT * FROM employees
LIMIT 5;

-- 3. Fetch first 2 employees from IT department
SELECT * FROM employees
WHERE department = 'IT'
LIMIT 2;

-- 4. Display top 4 employees with the highest salary
SELECT * FROM employees
ORDER BY salary DESC
LIMIT 4;

-- 5. Show first 3 employees from Pune city
SELECT * FROM employees
WHERE city = 'Pune'
LIMIT 3;

-- 6. Fetch first 1 record from HR department
SELECT * FROM employees
WHERE department = 'HR'
LIMIT 1;

-- 7. Display top 5 youngest employees
SELECT * FROM employees
ORDER BY age ASC
LIMIT 5;

-- 8. Show top 3 oldest employees
SELECT * FROM employees
ORDER BY age DESC
LIMIT 3;

-- 9. Fetch first 2 employees whose salary is greater than 40,000
SELECT * FROM employees
WHERE salary > 40000
LIMIT 2;

-- 10. Display top 3 employees from Marketing department
SELECT * FROM employees
WHERE department = 'Marketing'
LIMIT 3;
