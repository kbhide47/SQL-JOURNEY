-- Day 08: SUM() practice
-- Table used: employees(emp_id, name, age, department, designation, salary, city)

-- 1. Find the total salary of all employees
SELECT SUM(salary) AS total_salary
FROM employees;

-- 2. Calculate the total salary of IT department employees
SELECT SUM(salary) AS it_total_salary
FROM employees
WHERE department = 'IT';

-- 3. Find the total salary paid to HR department
SELECT SUM(salary) AS hr_total_salary
FROM employees
WHERE department = 'HR';

-- 4. Calculate the total salary of employees living in Pune
SELECT SUM(salary) AS pune_total_salary
FROM employees
WHERE city = 'Pune';

-- 5. Find the total salary of employees whose salary is greater than 40,000
SELECT SUM(salary) AS high_salary_total
FROM employees
WHERE salary > 40000;

-- 6. Calculate the total salary for each department
SELECT department, SUM(salary) AS total_salary
FROM employees
GROUP BY department;

-- 7. Find the total salary for each city
SELECT city, SUM(salary) AS total_salary
FROM employees
GROUP BY city;

-- 8. Calculate the total salary for each designation
SELECT designation, SUM(salary) AS total_salary
FROM employees
GROUP BY designation;

-- 9. Find the total salary of employees aged above 30
SELECT SUM(salary) AS above_30_total_salary
FROM employees
WHERE age > 30;

-- 10. Calculate the total salary of employees in Marketing department
SELECT SUM(salary) AS marketing_total_salary
FROM employees
WHERE department = 'Marketing';
