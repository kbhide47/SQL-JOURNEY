-- Day 10: LIKE, IN, BETWEEN practice
-- Table used: employees(emp_id, name, age, department, designation, salary, city)

-- 1. Show employees whose name starts with 'A'
SELECT * FROM employees
WHERE name LIKE 'A%';

-- 2. Display employees whose name ends with 'a'
SELECT * FROM employees
WHERE name LIKE '%a';

-- 3. Fetch employees whose name contains 'ha'
SELECT * FROM employees
WHERE name LIKE '%ha%';

-- 4. Show employees who belong to IT or HR department
SELECT * FROM employees
WHERE department IN ('IT', 'HR');

-- 5. Display employees who live in Pune, Mumbai, or Nagpur
SELECT * FROM employees
WHERE city IN ('Pune', 'Mumbai', 'Nagpur');

-- 6. Fetch employees whose designation is Developer or Tester
SELECT * FROM employees
WHERE designation IN ('Developer', 'Tester');

-- 7. Show employees whose salary is between 40,000 and 60,000
SELECT * FROM employees
WHERE salary BETWEEN 40000 AND 60000;

-- 8. Display employees whose age is between 25 and 35
SELECT * FROM employees
WHERE age BETWEEN 25 AND 35;

-- 9. Fetch employees whose emp_id is between 102 and 108
SELECT * FROM employees
WHERE emp_id BETWEEN 102 AND 108;

-- 10. Show employees from IT department whose salary is between 50,000 and 80,000
SELECT * FROM employees
WHERE department = 'IT'
AND salary BETWEEN 50000 AND 80000;
