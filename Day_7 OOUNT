-- Day 07: COUNT() practice
-- Table used: employees(emp_id, name, age, department, designation, salary, city)

-- 1. Count total number of employees
SELECT COUNT(*) AS total_employees
FROM employees;

-- 2. Count how many employees are in the IT department
SELECT COUNT(*) AS it_employees
FROM employees
WHERE department = 'IT';

-- 3. Count employees who live in Pune
SELECT COUNT(*) AS pune_employees
FROM employees
WHERE city = 'Pune';

-- 4. Count employees whose salary is greater than 40,000
SELECT COUNT(*) AS high_salary_employees
FROM employees
WHERE salary > 40000;

-- 5. Count employees in the HR department
SELECT COUNT(*) AS hr_employees
FROM employees
WHERE department = 'HR';

-- 6. Count employees whose age is above 30
SELECT COUNT(*) AS above_30_employees
FROM employees
WHERE age > 30;

-- 7. Count how many employees are in each department
SELECT department, COUNT(*) AS total
FROM employees
GROUP BY department;

-- 8. Count employees in each city
SELECT city, COUNT(*) AS total
FROM employees
GROUP BY city;

-- 9. Count employees for each designation
SELECT designation, COUNT(*) AS total
FROM employees
GROUP BY designation;

-- 10. Count employees who are in IT department and Pune city
SELECT COUNT(*) AS it_pune_employees
FROM employees
WHERE department = 'IT' AND city = 'Pune';
